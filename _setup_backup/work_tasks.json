{
    "tasks": [
        {
            "type": "shell",
            "label": "build",
            "command": "C:/msys64/mingw64/bin/g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-std=c++17",           // Enable C++17
                "-g",
                "${file}", // Compile single current file to compile
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
                //"-lbcrypt"  // Link bcrypt library
                //"-lgdi32"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}