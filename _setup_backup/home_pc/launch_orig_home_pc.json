    "version": "0.2.0",
    "configurations": [
        {
            "name": "Build All CPP",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}\\${fileBasenameNoExtension}.exe", // Output executable
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",  // can be "${fileDirname}",
            "environment": [],
            "externalConsole": false, // Set to true for an external terminal
            "MIMode": "gdb",
            "miDebuggerPath": "C:/msys64/mingw64/bin/gdb.exe", // Path to gdb.exe
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build all cpps" // Links to tasks.json for compiling
        }
    ]
}